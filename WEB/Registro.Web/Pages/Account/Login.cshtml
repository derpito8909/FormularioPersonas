@page
@model Registro.Web.Pages.Account.Login
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid py-4 d-flex justify-content-center">
    <div class="w-100 login-card">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="card-body login-card-body">

                <h2 class="mb-1 text-center fw-bold">Bienvenido</h2>
                <p class="text-muted mb-4 text-center">Ingresa tus credenciales.</p>

                <form method="post" class="needs-validation w-100" style="max-width: 420px;" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Usuario"
                               class="form-control"
                               placeholder="Usuario"
                               autocomplete="username" />
                        <label asp-for="Usuario">Usuario</label>
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating input-group">
                            <input asp-for="Pass"
                                   id="passInput"
                                   class="form-control"
                                   placeholder="Contraseña"
                                   type="password"
                                   autocomplete="current-password" />
                            <label asp-for="Pass">Contraseña</label>
                            <button class="btn btn-outline-secondary" type="button" id="togglePassBtn">
                                Mostrar
                            </button>
                        </div>
                        <span asp-validation-for="Pass" class="text-danger"></span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">Recordarme</label>
                        </div>
                        <small class="text-muted">Acceso solo con usuario registrado</small>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2">
                        Entrar
                    </button>

                    <hr class="my-4" />

                    <div class="text-center">
                        <small class="text-muted">
                            Si no tienes usuario, crea uno en “Crear usuario”.
                        </small>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const pass = document.getElementById('passInput');
            const btn = document.getElementById('togglePassBtn');
            if (!pass || !btn) return;

            btn.addEventListener('click', function () {
                const isPwd = pass.type === 'password';
                pass.type = isPwd ? 'text' : 'password';
                btn.textContent = isPwd ? 'Ocultar' : 'Mostrar';
            });
        })();
    </script>
}

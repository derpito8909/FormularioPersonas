@page "{id:int}"
@model Registro.Web.Pages.Personas.Details
@{
    ViewData["Title"] = "Detalle Persona";
}

<h2 class="mb-3">Detalle de Persona</h2>

@if (Model.Persona is null)
{
    <div class="alert alert-warning">No se encontró la persona.</div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <div class="text-muted">Id</div>
                    <div class="fw-semibold">@Model.Persona.PersonaId</div>
                </div>

                <div class="col-md-9">
                    <div class="text-muted">Nombre completo (calculado)</div>
                    <div class="fw-semibold">@Model.Persona.NombreCompleto</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted">Nombres</div>
                    <div>@Model.Persona.Nombres</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted">Apellidos</div>
                    <div>@Model.Persona.Apellidos</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted">Identificación (calculado)</div>
                    <div class="fw-semibold">@Model.Persona.IdentificacionCompleta</div>
                </div>

                <div class="col-md-3">
                    <div class="text-muted">Tipo</div>
                    <div>@Model.Persona.TipoIdentificacion</div>
                </div>

                <div class="col-md-3">
                    <div class="text-muted">Número</div>
                    <div>@Model.Persona.NumeroIdentificacion</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted">Email</div>
                    <div>@Model.Persona.Email</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted">Fecha creación</div>
                    <div>@Model.Persona.FechaCreacion.ToString("yyyy-MM-dd HH:mm")</div>
                </div>
            </div>

            <div class="mt-3">
                <a asp-page="/Personas/Index" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
}
